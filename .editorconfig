# EditorConfig - https://editorconfig.org
# Ensures consistent code formatting across different editors and IDEs

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files - tabs (gofmt standard)
[*.go]
indent_style = tab
indent_size = 4

# Makefile - tabs required
[Makefile]
indent_style = tab
indent_size = 4

# YAML files - 2-space indent
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON files - 2-space indent
[*.json]
indent_style = space
indent_size = 2

# TOML files - 2-space indent
[*.toml]
indent_style = space
indent_size = 2

# Shell scripts - 2-space indent
[*.sh]
indent_style = space
indent_size = 2

# Markdown files - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# Git configuration files
[.git*]
indent_style = tab
indent_size = 4

# GitHub Actions workflows
[.github/workflows/*.{yaml,yml}]
indent_style = space
indent_size = 2

# Go module files
[go.{mod,sum}]
indent_style = tab
indent_size = 4
